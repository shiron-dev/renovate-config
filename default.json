{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":automergePatch"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": "major",
      "addLabels": ["major"]
    },
    {
      "groupName": "eslint",
      "extends": ["packages:linters"],
      "matchPackagePatterns": ["eslint"]
    }
  ],
  "npm": {
    "extends": ["npm:unpublishSafe"]
  }
}
