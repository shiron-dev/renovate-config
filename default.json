{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":prImmediately",
    ":automergePatch",
    ":widenPeerDependencies"
  ],
  "stabilityDays": 3,
  "npm": {
    "extends": [
      "npm:unpublishSafe",
      ":automergePatch",
      ":separatePatchReleases"
    ],
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true
      },
      {
        "matchUpdateTypes": "major",
        "addLabels": ["major"]
      },
      {
        "groupName": "eslint",
        "extends": ["packages:linters"],
        "matchPackagePatterns": ["eslint"]
      }
    ]
  }
}
