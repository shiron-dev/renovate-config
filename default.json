{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":prImmediately",
    ":automergeMinor",
    ":separateMajorReleases",
    ":widenPeerDependencies",
    ":semanticCommits"
  ],
  "reviewers": [
    "shiron-dev"
  ],
  "stabilityDays": 3,
  "platformAutomerge": true,
  "rangeStrategy": "bump",
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [{
    "matchCategories": [
      "vulnerability"
    ],
    "addLabels": [
      "security"
    ],
    "stabilityDays": 0,
    "dependencyDashboardApproval": false,
    "rangeStrategy": "update-lockfile"
  }, {
    "matchUpdateTypes": "major",
    "addLabels": [
      "major"
    ]
  }],
  "npm": {
    "extends": [
      "npm:unpublishSafe"
    ],
    "packageRules": [
      {
        "groupName": "eslint",
        "extends": [
          "packages:linters"
        ],
        "matchPackagePatterns": [
          "eslint"
        ]
      }
    ]
  },
  "github-actions": {
    "extends": [
      "helpers:pinGitHubActionDigests"
    ],
    "packageRules": [
      {
        "groupName": "official actions",
        "matchPackageNames": [
          "/^actions//"
        ],
        "pinDigests": false
      }
    ]
  }
}
