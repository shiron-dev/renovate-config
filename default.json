{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":prImmediately",
    ":automergeMinor",
    ":separateMajorReleases",
    ":widenPeerDependencies",
    ":semanticCommitTypeAll(chore)"
  ],
  "assignees": [
    "shiron-dev"
  ],
  "stabilityDays": 3,
  "platformAutomerge": false,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": "major",
      "addLabels": [
        "major"
      ]
    }
  ],
  "npm": {
    "extends": [
      "npm:unpublishSafe"
    ],
    "packageRules": [
      {
        "groupName": "eslint",
        "extends": [
          "packages:linters"
        ],
        "matchPackagePatterns": [
          "eslint"
        ]
      }
    ]
  }
}
